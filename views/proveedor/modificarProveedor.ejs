<title>Editar proveedor</title>

<%- include('../header') %>

<h2>Editar proveedor</h2>

<form method="POST" action="/proveedores/editar/<%= proveedor.Id %>">
    <label>Código tributario:</label>
    <input type="text" name="codigoTributario" value="<%= proveedor.CodigoTributario %>" required maxlength="11"><br>

    <label>Denominación:</label>
    <input type="text" name="denominacion" value="<%= proveedor.Denominacion %>" required maxlength="100"><br>

    <label>Dirección:</label>
    <input type="text" name="direccion" value="<%= proveedor.Direccion %>" required maxlength="50"><br>

    <label>Provincia:</label>
    <select id="provinciaSelect" name="provincia" required>
        <option value="">Seleccione una provincia</option>
        <% provincias.forEach(p => { %>
            <option value="<%= p.Id %>" <%= proveedor.IdProvincia === p.Id ? 'selected' : '' %>><%= p.Nombre %></option>
        <% }) %>
    </select><br>

    <label>Localidad:</label>
    <select id="localidadSelect" name="localidad" required data-selected="<%= proveedor.IdLocalidad %>">
        <option value="">Seleccione una localidad</option>
    </select><br>

    <label>Teléfono:</label>
    <input type="text" name="telefono" value="<%= proveedor.Telefono %>" required maxlength="20"><br>

    <label>Email:</label>
    <input type="email" name="mail" value="<%= proveedor.Mail %>" required maxlength="50"><br>

    <label>Activo:</label>
    <select name="activo">
        <option value="1" <%= proveedor.Activo ? 'selected' : '' %>>Sí</option>
        <option value="0" <%= !proveedor.Activo ? 'selected' : '' %>>No</option>
    </select><br><br>

    <button type="submit">Guardar</button>
</form>

<script src="/functions/filtrosProvinciasYCiudades.js"></script>
<script src="/functions/general.js"></script>

<%- include('../footer') %>
