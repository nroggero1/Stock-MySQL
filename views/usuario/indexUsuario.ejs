<title>Usuarios</title>

<body>

    <%- include('../header') %>

<h2>Listado de usuarios</h2>
<a href="/usuarios/agregar">Agregar nuevo usuario</a>
<br>  
<br>
<table class="filtrable">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre de usuario</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Fecha de nacimiento</th>
      <th>Administrador</th>
      <th>Activo</th>
      <th>Fecha de alta</th>
    </tr>
  </thead>
  <tbody>
    <% usuarios.forEach(c => { %>
      <tr>
        <td><%= c.Id %></td>
        <td><%= c.NombreUsuario %></td>
        <td><%= c.Nombre %></td>
        <td><%= c.Apellido %></td>
        <td><%= c.Mail %></td>
        <td>
          <%= c.FechaNacimiento ? new Date(c.FechaNacimiento).toISOString().slice(0,10).replace(/-/g, '/') : '' %>
        </td>
        <td><%= c.Administrador ? 'Sí' : 'No' %></td>
        <td><%= c.Activo ? 'Sí' : 'No' %></td>
        <td>
          <%= new Date(c.FechaAlta).toISOString().slice(0,10).replace(/-/g, '/') %>
        </td>
        <td>
          <a href="/usuarios/editar/<%= c.Id %>">Editar</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<script src="/functions/general.js"></script>
<script src="/functions/filtrosTablas.js"></script>

<%- include('../footer') %>
    
</body>
</html>
